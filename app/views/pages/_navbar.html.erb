<%= stylesheet_link_tag 'navbar.css' %>
<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <%= link_to image_tag("logo.png", alt: "Your Logo", class: "navbar-brand", style: "width: 300px; height: 100px;"), root_path %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if logged_in? %>
                    <div class="user-name-div">
                        <li class="nav-item">
                            <%= link_to posts_path, class: "user-links" do %>
                                <i class="fas fa-newspaper"> </i> Posts
                            <% end %>
                        </li>
                        <li class="nav-item">
                            <%= link_to edit_user_path(current_user), class: "user-links" do %>
                                <i class="fas fa-user"> </i> Profile
                            <% end %>
                        </li>
                        <li class="nav-item">
                             <%= link_to "Sign Out", signout_path, class: "nav-link", data: { turbo_method: :delete, turbo_confirm: "Sign out of Sharp" } %>
                        </li>
                    </div>
                    <% else %>
                    <li class="nav-item">
                        <%= link_to "LogIn", signin_path, class: "nav-link" %>
                    </li>
                    <% end %>
                </ul>
            </div>
        </div>
    </nav>
</header>
