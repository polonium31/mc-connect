
<section class="user_form">
    <%= render '/global/errors', obj: @user %>
    <%= form_with( model: @user, data:{turbo: false}, local: true, class:"form_con") do |f| %>
    
      <div class="form_box username_box">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder:"Enter your full name"  %>
      </div>
    
      <div class="form_box email_box">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder:"Enter your Email"  %>
      </div>

      <div class="form_box">
        <%= f.label :program_name %>
        <%= f.text_field :program_name, placeholder:"Enter your program"  %>
      </div>

      <div class="form_box">
        <%= f.label :department %>
        <%= f.text_field :department, placeholder:"Enter your department"  %>
      </div>

      <div class="form_box password_box">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder:"Enter Password"  %>
      </div>
      <div class="form_box password_box">
        <h2>Social links</h2>
        </div>

      <div class="form_box password_box">
        <%= f.text_field :instagram_link, placeholder:"Enter your Instagram link" %>
      </div>
      <div class="form_box password_box">
        <%= f.text_field :linkedin_link, placeholder:"Enter your linkedin link" %>
      </div>
      
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class:"sign_btn") %>
      
    <% end %>
    </section>