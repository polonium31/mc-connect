<div class="user-form">
    <h1 class="text-danger">Welcome Back!</h1>
    <%= form_with( scope: :session, url: signin_path, data:{turbo: false},
         local: true, class:"form_con") do |f| %>
        
          <div class="form_box username_box">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder:"Enter your email"  %>
          </div>
    
          <div class="form_box password_box">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder:"Enter Password"  %>
          </div>
    
          
            <%= f.submit "Sign in" , class:"sign_btn" %>
          
        <% end %> 
    </div> 